{
  "name": "libro_notas_nodejs",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "node ./dist/index.js",
    "dev": "nodemon ./src/index.js --ignore src/books.json --exec babel-node",
    "build": "babel src -d dist && npm run copyviews && npm run copypublic",
    "copyviews": "ncp ./src/views/ ./dist/views/",
    "copypublic": "ncp ./src/public/ ./dist/public/",
    "clean": "rimraf dist"
  },
  "license": "MIT",
  "dependencies": {
    "dotenv": "^8.2.0",
    "ejs": "^3.1.6",
    "express": "^4.17.1",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.7",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.13.16",
    "@babel/core": "^7.14.0",
    "@babel/node": "^7.13.13",
    "@babel/preset-env": "^7.14.0",
    "ncp": "^2.0.0",
    "rimraf": "^3.0.2"
  }
}
